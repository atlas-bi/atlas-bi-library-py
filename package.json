{
  "name": "atlas_bi_library",
  "description": "Atlas BI Library",
  "homepage": "https://demo.atlas.bi",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "github:atlas-bi/atlas-bi-library-py"
  },
  "private": true,
  "scripts": {
    "start": "cd atlas; DJANGO_SETTINGS_MODULE='atlas.settings.dev' poetry run python manage.py runserver",
    "start:test": "export DJANGO_SETTINGS_MODULE=atlas.settings.test; cd atlas; poetry run python manage.py testserver index/fixtures/*.yaml --addrport 127.0.0.1:8009 --noinput",
    "start:celery": "cd atlas; DJANGO_SETTINGS_MODULE='atlas.settings.dev' poetry run celery -A atlas worker -l DEBUG",
    "start:beat": "cd atlas; DJANGO_SETTINGS_MODULE='atlas.settings.dev' poetry run celery -A atlas beat -l DEBUG --scheduler django_celery_beat.schedulers:DatabaseScheduler",
    "build": "gulp build",
    "watch": "gulp watch",
    "commit": "git add . && pre-commit run ; git add . ;  npm run pre-commit && git add . && cz --no-verify",
    "format:python": "poetry run tox -e reformat",
    "format:static": "prettier --config .prettierrc \"**/*.{ts,css,less,scss,js,json,md,yaml}\" --write",
    "format": "npm run format:python; npm run format:static",
    "test": "npm run test:eslint; npm run test:prettier; poetry run tox",
    "test:eslint": "eslint \"./atlas/**/*.js\" --color",
    "pre-commit": "lint-staged",
    "lint:python": "poetry run tox -e lint",
    "lint:html": "htmlhint \"**/*.{html,html.dj}\" --ignore \"**/solr/**\"",
    "lint:js": "xo atlas/static/js",
    "lint:scss": "stylelint \"atlas/static/scss/**/*.scss\";sass-lint \"atlas/static/scss/**/*.scss\"; ",
    "lint": "npm run lint:python; npm run lint:html; npm run lint:js; npm run lint:scss",
    "test:prettier": "prettier --check --config .prettierrc \"**/*.{ts,css,less,scss,js,json,md,yaml}\""
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@creativebulma/bulma-badge": "github:christopherpickering/bulma-badge#master",
    "@creativebulma/bulma-tooltip": "1.2.0",
    "@fontsource/inter": "^4.5.15",
    "@fontsource/rasa": "^4.5.14",
    "@fontsource/source-code-pro": "^4.5.14",
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^10.0.2",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@swc/core": "^1.3.46",
    "@toycode/markdown-it-class": "1.2.4",
    "autoprefixer": "^10.4.14",
    "bulma": "0.9.4",
    "bulma-checkradio": "2.1.3",
    "bulma-steps-component": "github:atlas-bi/bulma-steps",
    "bulma-switch": "2.0.4",
    "chart.js": "2.9.4",
    "cz-conventional-changelog": "3.3.0",
    "date-fns": "2.29.3",
    "del": "7.0.0",
    "dompurify": "^3.0.1",
    "es-main": "1.2.0",
    "eslint": "^8.37.0",
    "focus-within": "3.0.2",
    "fontawesome-subset": "^4.4.0",
    "fonteditor-core": "^2.1.11",
    "gulp": "4.0.2",
    "gulp-add-src": "1.0.0",
    "gulp-autoprefixer": "8.0.0",
    "gulp-concat": "2.6.1",
    "gulp-cssnano": "2.1.3",
    "gulp-postcss": "9.0.1",
    "gulp-purgecss": "5.0.0",
    "gulp-rename": "2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-sass": "5.1.0",
    "gulp-swc": "1.2.3",
    "gulp-uglify": "3.0.2",
    "htmlhint": "1.1.4",
    "jsnlog": "2.30.0",
    "lighthouse": "^10.1.0",
    "lint-staged": "^13.2.0",
    "markdown-it": "13.0.1",
    "open": "^9.1.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-sort-media-queries": "4.3.0",
    "puppeteer": "^19.8.3",
    "rollup-plugin-swc": "0.2.1",
    "rollup-stream-gulp": "0.0.3",
    "sass": "^1.60.0",
    "sass-lint": "1.13.1",
    "semantic-release": "^21.0.1",
    "stylelint": "^15.4.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-scss": "^4.6.0",
    "xo": "^0.53.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,css,less,scss,js,json,md,yaml}": "npm run format"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "ignores": [
      "atlas/static/js/polyfill/",
      "atlas/static/js/**/*.min.js",
      "atlas/static/js/old_mail.js",
      "atlas/static/js/essential.js"
    ],
    "globals": [
      "cache",
      "__dirname",
      "debounce",
      "showMessageBox",
      "CodeMirror",
      "getUrlVars",
      "serialize",
      "getOffset",
      "getCookie",
      "setCookie",
      "window",
      "document",
      "CustomEvent",
      "history",
      "sessionStorage",
      "getComputedStyle",
      "parseInt",
      "XMLHttpRequest",
      "Node",
      "navigator",
      "FormData",
      "Chart",
      "event",
      "DOMPurify",
      "csrftoken"
    ],
    "rules": {
      "unicorn/no-for-loop": "off",
      "unicorn/no-array-for-each": "off",
      "guard-for-in": "warn",
      "unicorn/no-this-assignment": "off",
      "unicorn/prefer-default-parameters": "off",
      "unicorn/no-document-cookie": "off",
      "unicorn/prefer-dom-node-dataset": "off",
      "unicorn/no-empty-file": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prefer-query-selector": "warn",
      "unicorn/prefer-number-properties": "off",
      "no-negated-condition": "warn",
      "no-multi-assign": "warn",
      "unicorn/prefer-keyboard-event-key": "off",
      "no-new": "warn",
      "unicorn/no-useless-switch-case": "warn",
      "no-prototype-builtins": "warn"
    }
  }
}
